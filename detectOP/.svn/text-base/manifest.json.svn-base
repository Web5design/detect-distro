{
  "name": "Detect OpenPublish",
  "version": "1.2",
  "description": "Detect whether a site is running OpenPublish",
  "browser_action": {
    "default_icon": "icon.png",
		"popup" : "popup.html"
  },
  "content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["insert.js"],
			"run_at": "document_end"
		},
		{
			"matches": ["<all_urls>"],
			"js": ["return.js"],
			"run_at": "document_idle"
		}
  ],
  "background_page": "background.html",
  "permissions": [
    	"http://*/*", 
		"https://*/*",
		"tabs"
  ]
}
